<?xml version="1.0" encoding="utf-8" ?>
<views:BaseContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       xmlns:views="clr-namespace:Notatki.Views"
                       xmlns:viewmodels="clr-namespace:Notatki.ViewModels"
                       x:Class="Notatki.Views.NotePage"
                       Title="Note">

    <views:BaseContentPage.BindingContext>

        <viewmodels:NoteViewModel />

    </views:BaseContentPage.BindingContext>

    <StackLayout Padding="16">

        <Entry Placeholder="Title"
               Text=""
               MaxLength="50"/>

        <Editor Placeholder="Description"
                Text=""
                VerticalOptions="FillAndExpand"/>

        <Button Text="Save"
                Command="{Binding SaveNoteTapCommand}"
                BackgroundColor="{DynamicResource Primary}"
                VerticalOptions="End"/>

    </StackLayout>

</views:BaseContentPage>